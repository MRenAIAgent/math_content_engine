# Math Content Engine Configuration
# Copy this file to .env and fill in your values

# LLM Provider: "claude" or "openai"
MATH_ENGINE_LLM_PROVIDER=claude

# API Keys (set at least one based on your chosen provider)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Model Settings (optional - defaults shown)
MATH_ENGINE_CLAUDE_MODEL=claude-sonnet-4-20250514
MATH_ENGINE_OPENAI_MODEL=gpt-4o

# Generation Settings (optional)
MATH_ENGINE_MAX_RETRIES=5
MATH_ENGINE_TEMPERATURE=0.7
MATH_ENGINE_MAX_TOKENS=4096

# Rendering Settings (optional)
# Quality: l (480p), m (720p), h (1080p), p (1440p), k (4K)
MATH_ENGINE_VIDEO_QUALITY=m
MATH_ENGINE_OUTPUT_FORMAT=mp4
MATH_ENGINE_OUTPUT_DIR=./output

# Manim Settings (optional)
MATH_ENGINE_MANIM_CACHE=./.manim_cache

# Animation Style (optional)
# Styles: dark, light
MATH_ENGINE_ANIMATION_STYLE=dark

# TTS (Text-to-Speech) Settings (optional)
# Voice options: teacher_male, teacher_female, friendly_male, friendly_female,
#                professional_male, professional_female, caring_male, caring_female, young_female
MATH_ENGINE_TTS_VOICE=teacher_female

# TTS Voice tuning (optional)
# Rate: -50% to +100% (speech speed)
MATH_ENGINE_TTS_RATE=+0%
# Volume: -50% to +50%
MATH_ENGINE_TTS_VOLUME=+0%
# Pitch: -100Hz to +100Hz
MATH_ENGINE_TTS_PITCH=+0Hz

# Custom edge-tts voice name (overrides MATH_ENGINE_TTS_VOICE if set)
# Examples: en-GB-RyanNeural, en-AU-WilliamNeural
# MATH_ENGINE_TTS_CUSTOM_VOICE=

# Video Presentation Style (optional)
# Styles: standard, step_by_step, fast_paced, detailed
MATH_ENGINE_VIDEO_STYLE=step_by_step

# Video Style Timing (optional, in seconds)
# Duration for each step in step-by-step animations
MATH_ENGINE_STEP_DURATION=4.0
# Pause duration between steps
MATH_ENGINE_PAUSE_BETWEEN_STEPS=0.5
