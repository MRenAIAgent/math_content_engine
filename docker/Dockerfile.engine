###############################################################################
# Dockerfile for Math Content Engine
#
# Multi-stage build with Manim system dependencies (ffmpeg, cairo, pango).
###############################################################################

# Build stage
FROM python:3.12-slim AS builder

WORKDIR /app

# Manim system build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    ffmpeg \
    libcairo2-dev \
    libpango1.0-dev \
    pkg-config \
    python3-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy project files
COPY pyproject.toml README.md ./
COPY src/ ./src/
COPY curriculum/ ./curriculum/

# Install with api + integration extras
RUN pip install --no-cache-dir ".[api]" \
    && pip install --no-cache-dir redis httpx

# Production stage
FROM python:3.12-slim

WORKDIR /app

# Runtime dependencies only (no build-essential)
RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    libcairo2 \
    libpango-1.0-0 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy installed packages from builder
COPY --from=builder /usr/local/lib/python3.12/site-packages /usr/local/lib/python3.12/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Copy application code + curriculum data
COPY --from=builder /app/src ./src
COPY --from=builder /app/curriculum ./curriculum

# Create directories and non-root user
RUN useradd --create-home --shell /bin/bash appuser \
    && mkdir -p /app/output /app/data \
    && chown -R appuser:appuser /app

USER appuser

# Set environment variables
ENV PYTHONPATH=/app/src \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PORT=8080

EXPOSE 8080

HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

CMD ["python", "-m", "uvicorn", "math_content_engine.api.server:app", \
     "--host", "0.0.0.0", "--port", "8080"]
